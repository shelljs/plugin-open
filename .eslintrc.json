{
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "comma-dangle": 0,
    "curly": 0,
    "func-names": 0,
    "global-require": 0,
    "import/order": 0,
    "no-console": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-restricted-globals": 0,
    "no-var": 0,
    "prefer-arrow-callback": 0,
    "prefer-template": 0,
    "spaced-comment": [2, "always", { "markers": ["@", "@include"], "exceptions": ["@"] }],
    "vars-on-top": 0,
    "new-cap": [2, {
      "capIsNewExceptions": [
        "ShellString"
      ]}
    ]
  }
}
